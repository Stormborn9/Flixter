<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#0B0A0A">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPoster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:scaleType="fitCenter"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/playOverlay"
            android:layout_width="83dp"
            android:layout_height="42dp"
            android:layout_alignLeft="@id/cvPoster"
            android:layout_alignTop="@id/cvPoster"
            android:layout_alignBottom="@id/cvPoster"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="34dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="52dp"
            android:foregroundTint="#28FFFFFF"
            android:src="@drawable/yt_icon_mono_dark"
            android:visibility="visible" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-1dp"
        android:layout_toEndOf="@id/cvPoster"
        android:fontFamily="casual"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:transitionName="titleTransition"
        tools:text="Shang-Chi and the Legend of the Ten Rings" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/cvPoster"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/white"
        android:transitionName="desTransition"
        tools:text="Shang-Chi must confront the past he thought he left behind when he is drawn into the web of the mysterious Ten Rings organization." />


</RelativeLayout>